{
  "name": "web3-file",
  "version": "0.0.0",
  "description": "The Web File implementation for Web3",
  "main": "./src/index.js",
  "types": "./types/index.d.ts",
  "type": "module",
  "files": [
    "cjs",
    "esm",
    "package.json",
    "types"
  ],
  "exports": {
    ".": {
      "import": "./src/index.js"
    }
  },
  "scripts": {
    "build": "npm run build:js && npm run build:types",
    "build:js": "ipjs build --main && npm run build:copy",
    "build:copy": "cp -a tsconfig.json src dist/ ",
    "build:types": "npm run build:copy && cd dist && tsc --build",
    "test": "npm run test:node && npm run test:browser",
    "test:node": "mocha \"./test/*.{node,spec}.js\"",
    "test:browser": "playwright-test \"./test/*.{browser,spec}.js\"",
    "lint": "standard",
    "prerelease": "npm run build",
    "release": "cd dist && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/web3-storage/web3-file.git"
  },
  "keywords": [
    "web3",
    "ipfs",
    "content-addressable"
  ],
  "author": "Vasco Santos <santos.vasco10@gmail.com>",
  "license": "(Apache-2.0 AND MIT)",
  "dependencies": {
    "@web-std/blob": "2.1.1",
    "browser-readablestream-to-it": "^1.0.2"
  },
  "devDependencies": {
    "@web-std/file": "1.1.0",
    "chai": "^4.3.4",
    "ipjs": "^5.0.0",
    "mocha": "^8.4.0",
    "playwright-test": "^5.0.0",
    "standard": "^16.0.3",
    "typescript": "^4.2.4",
    "uint8arrays": "^2.1.5"
  },
  "standard": {
    "ignore": [
      "dist"
    ]
  },
  "bugs": {
    "url": "https://github.com/web3-storage/web3-file/issues"
  },
  "homepage": "https://github.com/web3-storage/web3-file#readme",
  "typesVersions": {
    "*": {
      "*": [
        "types/*"
      ],
      "types/*": [
        "types/*"
      ]
    }
  }
}
